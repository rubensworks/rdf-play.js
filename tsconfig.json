{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2023",
    "lib": [
      "es2023",
      "dom",
      "DOM.Iterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "importHelpers": false,
    "inlineSources": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true
  },
  "include": [
    "index.ts",
    "lib/**/*",
    "bin/**/*",
    "perf/**/*",
    "spec/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test/*"
  ]
}
